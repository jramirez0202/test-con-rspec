<p id="notice"><%= notice %></p>

<h1>Wines</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Strains Percent</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @wines.each do |wine| %>
      <tr>
        <td> <h4><%= wine.name %> </h4></td>
          <td>
            <ul>
              <% wine.assemblies.sort.each do |assemblies|%>
                <li> Has <%= assemblies.percent%> % of the strain: <strong><%= assemblies.strain.name %></strong> </li>
              <% end %>
            </ul>
          </td>
        
        
          <% if current_user.admin%>
            <td><%= link_to 'Edit', edit_wine_path(wine) %></td>
            <td><%= link_to 'Destroy', wine, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
  <%= render 'links_to_actions' %>